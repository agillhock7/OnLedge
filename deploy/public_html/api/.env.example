# Reference only. The API runtime uses /api/config/config.php.

APP_ENV=production
APP_URL=https://onledge.gops.app
API_BASE_URL=https://onledge.gops.app/api

DB_HOST=127.0.0.1
DB_PORT=5432
DB_NAME=onledge
DB_USER=onledge_user
DB_PASSWORD=replace-with-strong-password
DB_SSLMODE=prefer

UPLOAD_DIR=/home/gopsapp1/onledge_uploads
MAX_UPLOAD_MB=10
ALLOWED_MIME_TYPES=image/jpeg,image/png,application/pdf

SESSION_COOKIE_NAME=onledge_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=Lax

SMTP_ENABLED=false
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASSWORD=smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=OnLedge
